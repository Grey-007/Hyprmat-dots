#!/bin/bash
set -e

WALL="$1"

[ -z "$WALL" ] && exit 1

# wallpaper
swww img "$WALL" \
  --transition-type grow \
  --transition-duration 0.6 \
  --transition-fps 60

# colors
matugen image "$WALL"

# compositor
hyprctl reload

# bars
pkill -SIGUSR2 waybar

# notifications
swaync-client -R

# spotify
spicetify apply
